@model List<PP1_GrupoA.Models.Job>

<div class="container">
    <h2 class="my-4">Lista de Trabajos</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Agregar Nuevo Trabajo</a>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Fecha de Creación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr class="@(int.Parse(job.Id) % 2 == 0 ? "table-light" : "table-warning")">
                    <td>@job.Id</td>
                    <td>@job.Nombre</td>
                    <td>@job.Descripcion</td>
                    <td>@job.Estado</td>
                    <td>@job.FechaCreacion</td>
                </tr>

                @if (int.Parse(job.Id) % 2 != 0)
                {
                    <tr>
                        <td colspan="5" class="text-danger">Este trabajo tiene un ID impar</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
