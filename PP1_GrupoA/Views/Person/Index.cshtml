@model List<PP1_GrupoA.Models.Person>

<div class="container">
    <h2 class="my-4">Lista de Personas</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Agregar Nueva Persona</a> 

    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Fecha de Nacimiento</th>
                <th>Edad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr class="@(int.Parse(person.Id) % 2 == 0 ? "table-secondary" : "table-danger")">
                    <td>@person.Id</td>
                    <td>@person.Nombre</td>
                    <td>@person.Apellido</td>
                    <td>@person.Email</td>
                    <td>@person.Telefono</td>
                    <td>@person.FechaNacimiento.ToShortDateString()</td>
                    <td>@(DateTime.Now.Year - person.FechaNacimiento.Year)</td>
                </tr>

                if (int.Parse(person.Id) % 2 != 0)
                {
                    <tr>
                        <td colspan="7" class="text-danger">Esta persona tiene un ID impar</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
